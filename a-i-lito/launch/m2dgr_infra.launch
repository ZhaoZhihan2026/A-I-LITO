<launch>

	<arg name="rviz" default="true" />
    
    <rosparam command="load" file="$(find a-i-lito)/config/M2DGR_lidar_infra.yaml" />

    <node pkg="a-i-lito" type="a-i-lito_mapping" name="laserMapping" output="screen">
		<rosparam file="$(find a-i-lito)/config/M2DGR_infra.yaml" />
	</node>

    <group if="$(arg rviz)">
		<node launch-prefix="nice" pkg="rviz" type="rviz" name="rviz" args="-d $(find a-i-lito)/rviz_cfg/a-i-lito.rviz" />
	</group>
	
	<!-- <node pkg="image_transport" type="republish" name="republish" args="compressed in:=/thermal_image_raw raw out:=/thermal_image_raw" output="screen" respawn="true"/> -->
	<node pkg="image_transport" type="republish" name="republish" args="compressed in:=/thermal_image_raw raw out:=/thermal_image_raw" output="screen" respawn="true"/>
	
	<!-- <node pkg="image_transport" type="republish" name="republish" args="compressed in:=/thermal_image_raw raw out:=/thermal_image_raw" output="screen" respawn="true"/> -->

launch-prefix="gdb -ex run --args"
launch-prefix="valgrind --leak-check=full"
</launch> 	

